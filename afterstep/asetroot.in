# some sample backgrounds definitions for you to chew on :
# see man asetroot for more details

MyBackground "back0"
    Use 0 "@with_afterdir@/non-configurable/0_background"
~MyBackground

MyBackground "back1"
    Use 0 "@with_afterdir@/non-configurable/1_background"
~MyBackground

MyBackground "back0scaled"
    Use 0 "@with_afterdir@/non-configurable/0_background"
    Scale
~MyBackground

MyBackground "back2"
    Use 0 "~/GNUstep/Library/AfterStep/non-configurable/1_background"
    Tint red
    Cut  300x300
    Scale 500x500
    Pad 0 yellow
    Align 4
~MyBackground

MyBackground "back3"
    Use 1 "*WharfTile"
    Tint green
~MyBackground

MyBackground "back4"
    Use 2 "-onroot -quiet ~/GNUstep/Library/AfterStep/non-configurable/1_background"
    Tint green
~MyBackground

*asetrootDeskBack  0  "back0"
*asetrootDeskBack  1  "back1"    
*asetrootDeskBack  2  "@with_afterdir@/non-configurable/2_background"
*asetrootDeskBack  3  "@with_afterdir@/non-configurable/3_background"    
